{
  "openapi": "3.1.0",
  "info": {
    "title": "Worlds API",
    "version": "0.0.4",
    "description": "A powerful API for managing RDF data stores with SPARQL query support, account management, and usage tracking.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://worlds.deno.dev/v1",
      "description": "Production server"
    },
    {
      "url": "http://localhost:8000/v1",
      "description": "Local development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/stores/{storeId}": {
      "get": {
        "summary": "Get store data",
        "description": "Retrieves RDF data from a store in the specified format",
        "operationId": "getStore",
        "tags": ["Stores"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          },
          {
            "name": "Accept",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "application/json",
                "application/n-quads",
                "application/ld+json",
                "application/trig",
                "text/turtle"
              ],
              "default": "application/json"
            },
            "description": "Desired RDF serialization format"
          }
        ],
        "responses": {
          "200": {
            "description": "Store data retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              },
              "application/n-quads": {
                "schema": {
                  "type": "string"
                }
              },
              "application/ld+json": {
                "schema": {
                  "type": "string"
                }
              },
              "application/trig": {
                "schema": {
                  "type": "string"
                }
              },
              "text/turtle": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Create or replace store",
        "description": "Creates a new store or replaces an existing one with RDF data",
        "operationId": "setStore",
        "tags": ["Stores"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/n-quads": {
              "schema": {
                "type": "string"
              }
            },
            "application/ld+json": {
              "schema": {
                "type": "string"
              }
            },
            "application/trig": {
              "schema": {
                "type": "string"
              }
            },
            "text/turtle": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Store created or replaced successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Add quads to store",
        "description": "Adds RDF quads to an existing store",
        "operationId": "addQuads",
        "tags": ["Stores"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/n-quads": {
              "schema": {
                "type": "string"
              }
            },
            "application/ld+json": {
              "schema": {
                "type": "string"
              }
            },
            "application/trig": {
              "schema": {
                "type": "string"
              }
            },
            "text/turtle": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Quads added successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete store",
        "description": "Removes a store and all its data",
        "operationId": "removeStore",
        "tags": ["Stores"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          }
        ],
        "responses": {
          "204": {
            "description": "Store deleted successfully"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/stores/{storeId}/sparql": {
      "get": {
        "summary": "Execute SPARQL query (GET)",
        "description": "Executes a SPARQL query against a store using GET with query parameter",
        "operationId": "querySparqlGet",
        "tags": ["SPARQL"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          },
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "SPARQL query string"
          }
        ],
        "responses": {
          "200": {
            "description": "Query executed successfully",
            "content": {
              "application/sparql-results+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Execute SPARQL query or update",
        "description": "Executes a SPARQL query or update against a store",
        "operationId": "executeSparql",
        "tags": ["SPARQL"],
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the store"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/sparql-query": {
              "schema": {
                "type": "string"
              }
            },
            "application/sparql-update": {
              "schema": {
                "type": "string"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string"
                  },
                  "update": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query executed successfully",
            "content": {
              "application/sparql-results+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "204": {
            "description": "Update executed successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/accounts": {
      "post": {
        "summary": "Create account",
        "description": "Creates a new account (admin only)",
        "operationId": "createAccount",
        "tags": ["Accounts"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/accounts/{accountId}": {
      "get": {
        "summary": "Get account",
        "description": "Retrieves account details (admin only)",
        "operationId": "getAccount",
        "tags": ["Accounts"],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the account"
          }
        ],
        "responses": {
          "200": {
            "description": "Account retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Update account",
        "description": "Updates an existing account (admin only)",
        "operationId": "updateAccount",
        "tags": ["Accounts"],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the account"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Account updated successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete account",
        "description": "Removes an account (admin only)",
        "operationId": "removeAccount",
        "tags": ["Accounts"],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier for the account"
          }
        ],
        "responses": {
          "204": {
            "description": "Account deleted successfully"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/usage": {
      "get": {
        "summary": "Get usage summary",
        "description": "Retrieves usage summary for the authenticated account. Admin users must specify accountId query parameter.",
        "operationId": "getUsage",
        "tags": ["Usage"],
        "parameters": [
          {
            "name": "accountId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Account ID (required for admin users, ignored for regular users)"
          }
        ],
        "responses": {
          "200": {
            "description": "Usage summary retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountUsageSummary"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Account ID for regular users, or ADMIN_ACCOUNT_ID for admin operations"
      }
    },
    "schemas": {
      "Account": {
        "type": "object",
        "required": ["id", "description", "plan", "accessControl"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the account"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the account"
          },
          "plan": {
            "type": "string",
            "enum": ["free_plan", "pro_plan"],
            "description": "Account plan determining resource limits"
          },
          "accessControl": {
            "type": "object",
            "required": ["stores"],
            "properties": {
              "stores": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of store IDs the account can access. Use ['*'] for wildcard access."
              }
            }
          }
        }
      },
      "AccountUsageSummary": {
        "type": "object",
        "required": ["stores"],
        "properties": {
          "stores": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/StoreUsageSummary"
            },
            "description": "Usage summary per store, keyed by store ID"
          }
        }
      },
      "StoreUsageSummary": {
        "type": "object",
        "required": ["reads", "writes", "queries", "updates", "updatedAt"],
        "properties": {
          "reads": {
            "type": "integer",
            "description": "Total number of read operations (GET requests)"
          },
          "writes": {
            "type": "integer",
            "description": "Total number of write operations (PUT, POST, DELETE requests)"
          },
          "queries": {
            "type": "integer",
            "description": "Total number of SPARQL query operations"
          },
          "updates": {
            "type": "integer",
            "description": "Total number of SPARQL update operations"
          },
          "updatedAt": {
            "type": "integer",
            "description": "Unix timestamp in milliseconds of last update"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          },
          "details": {
            "type": "string",
            "description": "Additional error details"
          }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request - invalid input",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized - invalid or missing authentication",
        "content": {
          "text/plain": {
            "schema": {
              "type": "string",
              "example": "Unauthorized"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "text/plain": {
            "schema": {
              "type": "string",
              "example": "Store not found"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Stores",
      "description": "RDF data store management operations"
    },
    {
      "name": "SPARQL",
      "description": "SPARQL query and update operations"
    },
    {
      "name": "Accounts",
      "description": "Account management operations (admin only)"
    },
    {
      "name": "Usage",
      "description": "Usage tracking and reporting"
    }
  ]
}
